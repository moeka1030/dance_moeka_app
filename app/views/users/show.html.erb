<h1>PROFILE</h1>

<div class="profile-container">
  <div class="profile-header">
    <div class="profile-image">
      <% if @user&.profile_image&.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag asset_path('default-profile.png'), alt: "Profile Image", size: "100x100" %>
      <% end %>
    </div>
    <div class="profile-info">
      <p>name : <%= @user.name %></p>
      <p>genre : <%= @user.genre %></p>
      <p>age : <%= @user.age %></p>
      <p>experience : <%= @user.experience %></p>
    </div>
    <div class="edit-button">
      <%= link_to edit_user_path(@user), class: "edit-icon" do %>
        ✏️
      <% end %>
    </div>
  </div>

  <div class="post-grid">
    <% @user.posts.each do |post| %>
      <div class="post-item">
        <a href="<%= post.video_url %>">
          <img src="<%= post.thumbnail_url || asset_path('default-thumbnail.png') %>" alt="動画">
          <div class="play-button">▶️</div>
        </a>
        <p class="post-category">HIPHOP</p>
      </div>
    <% end %>
    <!-- 新規投稿ボタン -->
    <div class="post-item new-post">
      <%= link_to new_post_path do %>
        ➕
      <% end %>
    </div>
  </div>
</div>
