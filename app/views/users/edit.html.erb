<h1>PROFILE</h1>

<%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>
  <div class="profile-image">
    <% if @user&.profile_image&.attached? %>
      <%= image_tag @user.profile_image, size: "100x100" %>
    <% else %>
      <%= image_tag asset_path('default-profile.png'), size: "100x100" %>
    <% end %>

    <%= f.file_field :profile_image, class: "hidden-input" %>
  </div>

  <div class="profile-info">
    <div class="info-item">
      <span>name</span> <span>: <%= f.text_field :name, class: "input-field" %></span>
    </div>
    <div class="info-item">
      <span>genre</span> <span>: <%= f.select :genre, ["HIPHOP", "JAZZ", "BALLET", "BREAKING"], class: "input-field" %></span>
    </div>
    <div class="info-item">
      <span>age</span> <span>: <%= f.number_field :age, class: "input-field" %></span>
    </div>
    <div class="info-item">
      <span>experience</span> <span>: <%= f.number_field :experience, class: "input-field" %></span>
    </div>
  </div>

  <%= f.submit "save", class: "save-button" %>
<% end %>
