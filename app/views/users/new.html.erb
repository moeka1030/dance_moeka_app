<%= form_with(model: @user, url: users_path, local: true) do |f| %>
<div class="signup-container">
    <h2>Let's get started!</h2>

    <div class="form-group">
      <%= f.text_field :name, placeholder: "name", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: "email", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "password", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.submit "create my account", class: "signup-button" %>
    </div>
  </div>
<% end %>