<%# 新規登録ページ %>
<% content_for :hide_footer, true %>
<h2>Let's get started!</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, multipart: true }) do |f| %>
  <div class="signup-container">
    

    <!-- エラーメッセージ表示 -->
    <% if resource.errors.any? %>
      <div class="error-messages">
        <h4><%= pluralize(resource.errors.count, "error") %> prevented this account from being created:</h4>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :name, placeholder: "name", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: "email", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "password", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.submit "create my account", class: "signup-button" %>
    </div>
  </div>
<% end %>

<!-- ログインページへのリンク -->
<p>Already have an account? <%= link_to "Log in", new_user_session_path %></p>
