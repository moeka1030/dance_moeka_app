<%# プロフィール編集ページ %>
<%# c %>

<h1>PROFILE</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, multipart: true }) do |f| %>
  <div class="profile-container">
    <!-- プロフィール画像 -->
    <div class="profile-image-container">
      <% if resource&.profile_image&.attached? %>
        <%= image_tag resource.profile_image, size: "100x100", class: "profile-image" %>
      <% else %>
        <%= image_tag "/default-profile.png", size: "100x100", class: "profile-image" %>
      <% end %>

      <!-- カメラアイコン（クリックで画像選択） -->
      <label for="profile_image_upload" class="camera-icon">
        📷
      </label>
      <%= f.file_field :profile_image, id: "profile_image_upload", class: "hidden-input" %>
    </div>

    <!-- プロフィール情報 -->
    <div class="profile-info">
      <div class="info-item">
        <span>name</span> <span><%= f.text_field :name, class: "input-field" %></span>
      </div>
      <div class="info-item">
        <span>genre</span> <span><%= f.text_field :genre, class: "input-field" %></span>
      </div>
      <div class="info-item">
        <span>age</span> <span><%= f.number_field :age, class: "input-field" %></span>
      </div>
      <div class="info-item">
        <span>experience</span> <span><%= f.number_field :experience, class: "input-field" %></span>
      </div>
    </div>

    <!-- パスワードなし更新用の hidden_field -->
    <%= f.hidden_field :current_password, value: "dummy_password" %>

    <!-- 保存ボタン -->
    <div class="button-container">
      <%= f.submit "save", class: "save-button" %>
    </div>
  </div>
<% end %>
