<%# homeのビュー %>
<h1>HOME</h1>

<div class="post-grid">
  <% @posts.each do |post| %>
    <div class="post-item">
      <div class="post-thumbnail">
        <% if post.video.attached? %>
          <video width="200" controls>
            <source src="<%= url_for(post.video) %>" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        <% else %>
          <p>動画なし</p>
        <% end %>
      </div>

      <p class="post-category"><%= post.genre %></p>

      <% if post.likes.exists?(user: current_user) %>
  <%= link_to post_like_path(post, current_user.likes.find_by(post: post)), method: :delete, class: "like-button active" do %>
    ❤️
  <% end %>
<% else %>
  <%= link_to post_like_index_path(post), method: :post, class: "like-button" do %>
    🤍
  <% end %>
<% end %>

    </div>
  <% end %>
</div>
