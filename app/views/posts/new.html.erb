<%# 新規投稿フォームのビュー %>

<h1>PROFILE</h1>

<!-- 動画アップロード -->
<%= form_with model: @post, url: posts_path, method: :post, local: true, multipart: true do |f| %>
  <div style="border: 1px solid black; padding: 10px; text-align: center;">
    <%= f.label :video, "動画を選択" %>
      <div style="width: 50px; height: 50px; background-color: lightgray; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: auto;">
        ➕
      </div>
    <%= f.file_field :video, accept: "video/*" %>
  </div>

  <!-- ジャンル入力 -->
  <div>
    <%= f.label :genre, "Genre", style: "color: gray;" %>
    <%= f.select :genre, ["HIPHOP", "JAZZ", "BALLET", "BREAKING"], {}, class: "input-field" %>
  </div>

  <!-- 説明入力 -->
  <div>
    <%= f.label :description, "Detail of Contents", style: "color: gray;" %>
    <%= f.text_area :description %>
  </div>

  <!-- 投稿ボタン -->
  <div>
    <%= f.submit "Create", style: "background-color: deepskyblue; color: white; padding: 10px; border-radius: 10px; border: none;" %>
  </div>
<% end %>
