<%# いいねのボタン機能 %>

<% if current_user.likes.exists?(post: post) %>
  <%= button_to "🩷", post_like_path(post, current_user.likes.find_by(post: post).id), method: :delete, class: "liked-button", remote: true %>
<% else %>
  <%= button_to "🤍", post_likes_path(post), method: :post, class: "unliked-button", remote: true %>
<% end %>
