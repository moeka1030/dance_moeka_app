<h1>Like</h1>

<div class="post-grid">
  <% @liked_posts.each do |post| %>
    <div class="post-item">
      <div class="post-thumbnail">
        <!-- 動画のサムネイル（再生ボタン付き） -->
        <a href="<%= url_for(post.video) %>">
          <img src="<%= post.thumbnail.attached? ? url_for(post.thumbnail) : 'default-thumbnail.png' %>" alt="動画">
          <div class="play-button">▶️</div>
        </a>
      </div>

      <!-- 投稿のカテゴリ（HIPHOPなど） -->
      <p class="post-category"><%= post.genre %></p>

      <!-- いいねボタン -->
      <%= link_to post_likes_path(post), method: :post, class: "like-button" do %>
        ❤️
      <% end %>
    </div>
  <% end %>
</div>
