<h1>Like</h1>

<div class="post-grid">
  <% @liked_posts.each do |post| %>
    <div class="post-item">
      <div class="post-thumbnail">
        <!-- 動画のサムネイル（再生ボタン付き） -->
        <a href="<%= post.video_url %>">
          <img src="<%= post.thumbnail_url || 'default-thumbnail.png' %>" alt="動画">
          <div class="play-button">▶️</div>
        </a>
      </div>

      <!-- 投稿のカテゴリ（HIPHOPなど） -->
      <p class="post-category">HIPHOP</p>

      <!-- いいねボタン -->
      <%= link_to post_like_path(post, current_user.likes.find_by(post: post)), method: :delete, class: "like-button active" do %>
        ❤️
      <% end %>
    </div>
  <% end %>
</div>
