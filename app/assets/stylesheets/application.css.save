.login-container {
    max-width: 350px;
    margin: 50px auto;
    padding: 20px;
    text-align: center;
  }
  
  h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }
  
  .form-group {
    margin-bottom: 15px;
  }
  
  .input-field {
    width: 100%;
    padding: 12px;
    border: 2px solid #000;
    border-radius: 20px;
    font-size: 16px;
    text-align: center;

  
  .login-button {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 20px;
    background-color: #63b3ed; /* ÈùíËâ≤ */
    color: white;
    font-size: 18px;
    cursor: pointer;
    transition: background 0.3s;
  }
  
  .login-button:hover {
    background-color: #4299e1;
  }
  
  /* „Éò„ÉÉ„ÉÄ„Éº„Éá„Ç∂„Ç§„É≥ */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background: white;
    border-bottom: 2px solid #ddd;
  }
  
  .header h1 {
    font-size: 20px;
    margin-left: 10px;
  }
  
  .header-right {
    margin-right: 10px;
  }
  
  .logout-icon i {
    font-size: 20px;
    color: black;
  }
  
  .login-button {
    padding: 5px 10px;
    background: blue;
    color: white;
    border-radius: 5px;
    text-decoration: none;
  }
  
  .navbar {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    background: #fff;
    border-top: 2px solid #ddd;
    padding: 10px 0;
  }
  
  .nav-item {
    text-decoration: none;
    color: #A0A0A0;
    font-size: 24px;
    padding: 10px;
  }
  
  .nav-item.active {
    color: #FF6B6B;
  }
  
